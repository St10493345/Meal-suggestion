<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnsuggest"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="59dp"
        android:text="Suggest meal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="57dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnsuggest" />

    <TextView
        android:id="@+id/txtsuggestion"
        android:layout_width="307dp"
        android:layout_height="154dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="226dp"
        android:text="meal suggestion for time of day"
        android:textColor="#F1232222"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnsuggest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTime" />

    <EditText
        android:id="@+id/edtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="113dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Enter the time of day"
        android:textColor="#FDF9F9"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txtsuggestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>